FROM us.gcr.io/anvil-gcr-public/anvil-rstudio-bioconductor:0.0.6

RUN apt-get update && \
	apt-get install -y --no-install-recommends libhiredis-dev && \
	rm -rf /var/lib/apt/lists/*

RUN R -e 'BiocManager::install("mtmorgan/RedisParam")'

RUN R -e 'devtools::install_github("Bioconductor/BiocKubeInstall", ref = "depends_apply")'

COPY worker.R /home/docker/
